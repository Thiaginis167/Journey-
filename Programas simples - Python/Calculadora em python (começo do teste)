Calculadora Simples 

import time 


print('CALCULADORA:\n1- Somar\n2- Subtrair\n3- Multiplicar\n0 - Sair')
while True:
    escolha = input('Insira sua opção: ')
    
    if escolha == '1':
        print('Opção: SOMAR.')
        soma = ()
        int(input('Insira os números que deseja somar'))

    elif escolha == '2':
        print('Opção: SUBTRAIR.')

    elif escolha == '3':
        print('Opção: MULTIPLICAR.')

    elif escolha == '0':
        print('Até logo!')
        break
    
    else:
        print('Opção inválida. Escolha entre 1, 2, 3 ou 0.')






soma = []
entrada = input('Insira os números que deseja somar, e insira "=" quando finalizar: ')

while entrada != "=":
    valores = entrada.split('+')
    for valor in valores:
        soma.append(valor)
    entrada = input('')

print('Valores finais:', soma)
